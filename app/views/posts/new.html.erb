<h1>投稿ページ</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <div>
    <%= f.label :title, :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content, :説明文 %>
    <%= f.text_area :content, class: "form-control", rows: 5 %>
  </div>
  <div>
    <%= f.label :content, :写真を選択 %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
<% end %>